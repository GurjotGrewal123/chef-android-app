<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CookProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/topBar4"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#FF9800" />

        <TextView
            android:id="@+id/profileNameIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/alata"
            android:gravity="center_horizontal"
            android:text="placeholder's Profile"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cookProfileRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/alata"
            android:text="Rating: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cookProfileIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/alata"
            android:text="Introduction:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cookAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/alata"
            android:text="Address:"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/placeHolderImage5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            app:srcCompat="@drawable/seg2105logo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>