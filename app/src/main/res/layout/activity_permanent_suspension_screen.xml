<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermanentSuspensionScreen">

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#FF9800" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/permSuspensionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Oh oh! It looks like your account has been permenantly suspended for violating our terms of service! Do not hesitate to contact us for further information"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/placeHolderImage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            app:srcCompat="@drawable/seg2105logo" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Exit App" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>