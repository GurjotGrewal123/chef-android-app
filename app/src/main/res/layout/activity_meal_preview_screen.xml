<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealPreviewScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="15sp"
            android:background="#FF9800" />

        <TextView
            android:id="@+id/purchasePromptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Here is the meal you selected:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Meal Name: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mealPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Price:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mealIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Ingredients:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mealAllergens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Allergerns:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mealDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Meal Description:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cookUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Cook: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cookRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="Cook Rating (out of 5):"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/purchasePromptText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Would you like to purchase this meal?"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buyMealButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:backgroundTint="#FF9800"
                android:text="Buy Meal" />

            <Button
                android:id="@+id/cancelMealButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#FF9800"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>