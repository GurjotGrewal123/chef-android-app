<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealSearchParamaterScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="15sp"
            android:background="#FF9800" />

        <TextView
            android:id="@+id/welcomeMealSelectText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Welcome! Please specify what kind of meal you would like to search for today"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/enterMealNameSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="15"
            android:fontFamily="sans-serif"
            android:hint="Enter meal name"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Button
            android:id="@+id/searchForMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#FF9800"
            android:text="Search for Meal" />

        <Button
            android:id="@+id/selectMealTypeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#FF9800"
            android:text="Select Meal Type" />

        <Button
            android:id="@+id/cancelMealSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#FF9800"
            android:text="Cancel" />

        <ImageView
            android:id="@+id/placeHolderImage4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/seg2105logo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>